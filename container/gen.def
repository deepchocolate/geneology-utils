Bootstrap: docker
From: ubuntu:24.04
Stage:build

%labels
	Version 1.0.0
	Label andreasjangmo@gmail.com

%files
 runscript.sh /bin/runscript.sh
 ../python /pedigree-utils
 temp/Anaconda3-2024.06-1-Linux-x86_64.sh /temp/anaconda.sh

%runscript
 exec bash /bin/runscript.sh $@

%post
	export DEBIAN_FRONTEND=noninteractive
	chmod +x /bin/runscript.sh
	
	ln -s /pedigree-utils/pedigree-utils.py /usr/bin/pedigree-utils
	
	apt update --yes
	apt upgrade --yes
	
	### Install anaconda
	apt install --yes libxrandr2 libxrandr2 libxss1 libxcursor1 libxcomposite1 libxi6 libxtst6 \
	 libgcc-11-dev gcc g++
	bash /temp/anaconda.sh -b -p /conda
	rm /temp/anaconda.sh
	ln -s /conda/bin/conda /usr/bin/conda
	eval "$(/conda/bin/conda shell.bash hook);"
	conda create -n pedigree-utils python=3.12.3
	conda activate pedigree-utils
	conda install conda-forge::graph-tool=2.59=py312hf63df81_1
	conda install -c conda-forge msgpack-python==1.0.5
	conda install dask -c conda-forge
	conda install -c conda-forge pyarrow==14.0.1
	conda install conda-forge::networkx
	conda install conda-forge::pytables
	
	# install two helper packages we need
	apt install --yes --no-install-recommends software-properties-common dirmngr apt-utils build-essential wget
	
	apt install --yes python3-pip python3-graph-tool snakemake python3-pandas python3-networkx
	
	#python3 -m pip install "dask[complete]"
	
	### Install anaconda
	#apt install --yes libxrandr2 libxrandr2 libxss1 libxcursor1 libxcomposite1 libxi6 libxtst6 \
	# libgcc-11-dev gcc g++
	#bash /home/container/temp/Anaconda3-2024.06-1-Linux-x86_64.sh -b -p /conda
	
	
	### Install R and packages
	# Add the signing key
	wget -qO- https://cloud.r-project.org/bin/linux/ubuntu/marutter_pubkey.asc | tee -a /etc/apt/trusted.gpg.d/cran_ubuntu_key.asc
	# add the R 4.0 repo from CRAN -- adjust 'focal' to 'groovy' or 'bionic' as needed
	add-apt-repository "deb https://cloud.r-project.org/bin/linux/ubuntu $(lsb_release -cs)-cran40/"
	apt install --yes --no-install-recommends r-base r-base-dev r-cran-doparallel
	Rscript -e "install.packages(c('argparser','DBI','RSQLite', 'pedtools', 'ribd', 'foreach', 'haven'))"

%environment
	export LC_ALL=C
	
